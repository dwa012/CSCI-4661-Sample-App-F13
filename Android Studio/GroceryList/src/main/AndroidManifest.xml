<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uno.csci4661.grocerylist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.uno.csci4661.grocerylist.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.uno.csci4661.grocerylist.ui.ItemDetailActivity"
            android:label="@string/title_activity_item_detail"
            android:parentActivityName="edu.uno.csci4661.grocerylist.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.uno.csci4661.grocerylist.MainActivity" />
        </activity>

        <receiver android:name="edu.uno.csci4661.grocerylist.receivers.ItemReceiver" >
            <intent-filter>
                <action android:name="edu.uno.csci4661.grocerylist.ITEM_BROADCAST" />
            </intent-filter>
        </receiver>

        <activity
            android:name="edu.uno.csci4661.grocerylist.ui.NewItemActivity"
            android:label="@string/title_activity_new_item" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.uno.csci4661.grocerylist.ui.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>

        <provider
            android:name="edu.uno.csci4661.grocerylist.database.GroceryProvider"
            android:authorities="edu.uno.csci4661.grocerylist"
            android:label="@string/grocery_list_provider_label"
            android:exported="false" />

        <activity
            android:name="edu.uno.csci4661.grocerylist.auth.AuthActivity"
            android:label="@string/title_activity_auth" >
        </activity>

        <service
            android:name="edu.uno.csci4661.grocerylist.sync.MySyncService"
            android:exported="true">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>
            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sync_adpater" />
        </service>

    </application>

</manifest>
